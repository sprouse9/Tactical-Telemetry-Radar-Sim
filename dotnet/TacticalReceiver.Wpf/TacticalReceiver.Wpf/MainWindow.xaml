<Window x:Class="TacticalReceiver.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tactical Receiver (WPF)"
        Width="1100" Height="650"
        Background="#050A1E"
        KeyDown="Window_KeyDown">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="760"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- HUD -->
        <Border Grid.Row="0" Grid.Column="0" Background="#050A1E" Padding="16">
            <StackPanel>
                <TextBlock x:Name="Hud1" Foreground="#C8C8C8" FontFamily="Consolas" FontSize="16"/>
                <TextBlock x:Name="Hud2" Foreground="#AAAAAA" FontFamily="Consolas" FontSize="16"/>
                <TextBlock x:Name="Hud3" Foreground="#666666" FontFamily="Consolas" FontSize="16"/>
            </StackPanel>
        </Border>

        <!-- Radar -->
        <Border Grid.Row="1" Grid.Column="0" Background="#050A1E">
            <Canvas x:Name="RadarCanvas"
                    Background="#050A1E"
                    SizeChanged="RadarCanvas_SizeChanged" />
        </Border>

        <!-- Right panel -->
        <Border Grid.Row="0" Grid.RowSpan="2" Grid.Column="1"
                Background="#121626"
                BorderBrush="#3C4664"
                BorderThickness="2,0,0,0">
            <Grid Margin="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="ENTITY LIST" Foreground="#DCDCDC" FontFamily="Consolas" FontSize="18" Margin="0,0,0,6"/>
                <TextBlock Grid.Row="1" Text="Click row to select/lock" Foreground="#6482A0" FontFamily="Consolas" FontSize="12" Margin="0,0,0,10"/>

                <DataGrid x:Name="GridTracks"
                          Grid.Row="2"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          SelectionChanged="GridTracks_SelectionChanged"
                          FontFamily="Consolas"
                          FontSize="12"
                          Background="#121626"
                          Foreground="#C8E6C8"
                          GridLinesVisibility="None"
                          HeadersVisibility="Column">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding EntityId}" Width="70"/>
                        <DataGridTextColumn Header="TYPE" Binding="{Binding EntityType}" Width="70"/>
                        <DataGridTextColumn Header="X" Binding="{Binding X}" Width="60"/>
                        <DataGridTextColumn Header="Y" Binding="{Binding Y}" Width="60"/>
                        <DataGridTextColumn Header="HDG" Binding="{Binding Heading}" Width="60"/>
                        <DataGridTextColumn Header="SPD" Binding="{Binding Speed}" Width="60"/>
                        <DataGridTextColumn Header="STATE" Binding="{Binding State}" Width="70"/>
                    </DataGrid.Columns>
                </DataGrid>

                <TextBlock Grid.Row="3" x:Name="Footer"
                           Text="TRACKS 0/0   STALE=RED"
                           Foreground="#505A6E" FontFamily="Consolas" FontSize="12"
                           Margin="0,10,0,0"/>
            </Grid>
        </Border>
    </Grid>
</Window>